{
  "name": "file-groups",
  "displayName": "File Groups",
  "description": "Organize files from different folders into groups for quick access",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fileGroupsContainer",
          "title": "File Groups",
          "icon": "$(files)"
        }
      ]
    },
    "views": {
      "fileGroupsContainer": [
        {
          "id": "fileGroupsView",
          "name": "Groups",
          "contextualTitle": "File Groups"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "fileGroupsView",
        "contents": "No file groups yet.\n[Create a Group](command:fileGroups.createGroup)\n\nYou can also drag files from the Explorer or tabs into this panel."
      }
    ],
    "commands": [
      {
        "command": "fileGroups.createGroup",
        "title": "Create Group",
        "icon": "$(add)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.renameGroup",
        "title": "Rename Group",
        "icon": "$(edit)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.setGroupIcon",
        "title": "Set Icon",
        "icon": "$(symbol-misc)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.setGroupColor",
        "title": "Set Color",
        "icon": "$(symbol-color)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.addFile",
        "title": "Add to File Group",
        "icon": "$(add)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.addFileFromTab",
        "title": "Add to File Group",
        "icon": "$(add)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.removeFile",
        "title": "Remove from Group",
        "icon": "$(remove)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.openAll",
        "title": "Open All Files",
        "icon": "$(files)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.closeAll",
        "title": "Close All Files",
        "icon": "$(close-all)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "File Groups"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "fileGroups.createGroup",
          "when": "view == fileGroupsView",
          "group": "navigation"
        },
        {
          "command": "fileGroups.refresh",
          "when": "view == fileGroupsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "fileGroups.openAll",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "inline@1"
        },
        {
          "command": "fileGroups.closeAll",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "inline@2"
        },
        {
          "command": "fileGroups.openAll",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "1_actions@1"
        },
        {
          "command": "fileGroups.closeAll",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "1_actions@2"
        },
        {
          "command": "fileGroups.renameGroup",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "2_modify@1"
        },
        {
          "command": "fileGroups.setGroupIcon",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "2_modify@2"
        },
        {
          "command": "fileGroups.setGroupColor",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "2_modify@3"
        },
        {
          "command": "fileGroups.deleteGroup",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "3_delete"
        },
        {
          "command": "fileGroups.removeFile",
          "when": "view == fileGroupsView && viewItem == file",
          "group": "inline"
        },
        {
          "command": "fileGroups.removeFile",
          "when": "view == fileGroupsView && viewItem == file",
          "group": "1_actions"
        }
      ],
      "explorer/context": [
        {
          "command": "fileGroups.addFile",
          "when": "resourceScheme == file",
          "group": "7_modification"
        }
      ],
      "editor/title/context": [
        {
          "command": "fileGroups.addFileFromTab",
          "when": "resourceScheme == file",
          "group": "2_files"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
