{
  "name": "codegroup-file-organizer",
  "displayName": "CodeGroup - File Organizer",
  "description": "Organize files from different folders into custom groups with colors, icons, and subgroups. Perfect for managing related files across large projects.",
  "version": "1.0.1",
  "publisher": "PeterDev",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/MiszterSoul/codegroup"
  },
  "bugs": {
    "url": "https://github.com/MiszterSoul/codegroup/issues"
  },
  "homepage": "https://github.com/MiszterSoul/codegroup#readme",
  "keywords": [
    "file",
    "groups",
    "organize",
    "workspace",
    "folders",
    "bookmarks",
    "favorites",
    "collections",
    "project management",
    "productivity"
  ],
  "galleryBanner": {
    "color": "#5C6BC0",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fileGroupsContainer",
          "title": "File Groups",
          "icon": "$(package)"
        }
      ]
    },
    "views": {
      "fileGroupsContainer": [
        {
          "id": "fileGroupsView",
          "name": "Groups",
          "contextualTitle": "File Groups"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "fileGroupsView",
        "contents": "No file groups yet.\n[Create a Group](command:fileGroups.createGroup)\n\nYou can also drag files from the Explorer or tabs into this panel."
      }
    ],
    "commands": [
      {
        "command": "fileGroups.createGroup",
        "title": "Create Group",
        "icon": "$(add)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.createSubgroup",
        "title": "Create Subgroup",
        "icon": "$(new-folder)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.deleteGroupFromTitle",
        "title": "Delete Group...",
        "icon": "$(trash)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.renameGroup",
        "title": "Rename Group",
        "icon": "$(edit)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.setGroupIcon",
        "title": "Set Icon",
        "icon": "$(symbol-misc)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.setGroupColor",
        "title": "Set Color",
        "icon": "$(symbol-color)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.addFile",
        "title": "Add to File Group",
        "icon": "$(add)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.addFileFromTab",
        "title": "Add to File Group",
        "icon": "$(add)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.removeFile",
        "title": "Remove from Group",
        "icon": "$(remove)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.openAll",
        "title": "Open All Files",
        "icon": "$(files)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.closeAll",
        "title": "Close All Files",
        "icon": "$(close-all)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.moveToRoot",
        "title": "Move to Root Level",
        "icon": "$(arrow-up)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "File Groups"
      },
      {
        "command": "fileGroups.cleanupMissingFiles",
        "title": "Clean Up Missing Files",
        "icon": "$(clear-all)",
        "category": "File Groups"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "fileGroups.createGroup",
          "when": "view == fileGroupsView",
          "group": "navigation@1"
        },
        {
          "command": "fileGroups.deleteGroupFromTitle",
          "when": "view == fileGroupsView",
          "group": "navigation@2"
        },
        {
          "command": "fileGroups.expandAll",
          "when": "view == fileGroupsView",
          "group": "navigation@3"
        },
        {
          "command": "fileGroups.collapseAll",
          "when": "view == fileGroupsView",
          "group": "navigation@4"
        },
        {
          "command": "fileGroups.refresh",
          "when": "view == fileGroupsView",
          "group": "navigation@5"
        }
      ],
      "view/context": [
        {
          "command": "fileGroups.createGroup",
          "when": "view == fileGroupsView",
          "group": "1_create"
        }
      ],
      "view/item/context": [
        {
          "command": "fileGroups.openAll",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "inline@1"
        },
        {
          "command": "fileGroups.closeAll",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "inline@2"
        },
        {
          "command": "fileGroups.openAll",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "1_actions@1"
        },
        {
          "command": "fileGroups.closeAll",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "1_actions@2"
        },
        {
          "command": "fileGroups.createSubgroup",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "2_modify@0"
        },
        {
          "command": "fileGroups.renameGroup",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "2_modify@1"
        },
        {
          "command": "fileGroups.setGroupIcon",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "2_modify@2"
        },
        {
          "command": "fileGroups.setGroupColor",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "2_modify@3"
        },
        {
          "command": "fileGroups.deleteGroup",
          "when": "view == fileGroupsView && viewItem == group",
          "group": "3_delete"
        },
        {
          "command": "fileGroups.openAll",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "inline@1"
        },
        {
          "command": "fileGroups.closeAll",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "inline@2"
        },
        {
          "command": "fileGroups.openAll",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "1_actions@1"
        },
        {
          "command": "fileGroups.closeAll",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "1_actions@2"
        },
        {
          "command": "fileGroups.createSubgroup",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "2_modify@0"
        },
        {
          "command": "fileGroups.renameGroup",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "2_modify@1"
        },
        {
          "command": "fileGroups.setGroupIcon",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "2_modify@2"
        },
        {
          "command": "fileGroups.setGroupColor",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "2_modify@3"
        },
        {
          "command": "fileGroups.moveToRoot",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "2_modify@4"
        },
        {
          "command": "fileGroups.deleteGroup",
          "when": "view == fileGroupsView && viewItem == subgroup",
          "group": "3_delete"
        },
        {
          "command": "fileGroups.removeFile",
          "when": "view == fileGroupsView && viewItem == file",
          "group": "inline"
        },
        {
          "command": "fileGroups.removeFile",
          "when": "view == fileGroupsView && viewItem == file",
          "group": "1_actions"
        }
      ],
      "explorer/context": [
        {
          "command": "fileGroups.addFile",
          "when": "resourceScheme == file",
          "group": "7_modification"
        }
      ],
      "editor/title/context": [
        {
          "command": "fileGroups.addFileFromTab",
          "when": "resourceScheme == file",
          "group": "2_files"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "18.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
